<Window x:Class="WpfAppDevil.DevilEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDevil"
        mc:Ignorable="d"
        Title="DevilEditorWindow" Height="450" Width="500">
	<Grid>
		<StackPanel>
			
		<Label Content="Имя"/>
		<TextBox Text="{Binding Devil.Nick}"/>
		<Label Content="Ранг"/>
		<TextBox Text="{Binding Devil.Rank}"/>
		<Label Content="Год"/>
		<TextBox Text="{Binding Devil.Year}"/>
		</StackPanel>
		<Button Margin="150 150 150 230" Content="Сохранить" Click="Save"/>
	</Grid>
</Window>
