<Window x:Class="WpfAppDevil.RackEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDevil"
        mc:Ignorable="d"
        Title="RackEditorWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Имя"/>
            <TextBox Text="{Binding Rack.Title}"/>
            <Label Content="Макс. использований"/>
            <TextBox Text="{Binding Rack.UseCount}"/>
            <Label Content="Ответственный"/>
            <ComboBox ItemsSource="{Binding Devils}" DisplayMemberPath="Id"/>
        </StackPanel>
        <Button Margin="150 150 150 230" Content="Сохранить" Click="Save"/>
    </Grid>
</Window>
